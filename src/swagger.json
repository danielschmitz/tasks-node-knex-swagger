{
  "swagger": "2.0",
  "info": {
    "title": "Tasks API",
    "description": "Documentation API. https://github.com/danielschmitz/rtasks-node-knex-swagger <br/><br/> <strong>In the heroku deploy, you MUST use <u>HTTPS</u> scheme </strong>",
    "version": "0.1",
    "contact": {
      "name": "Daniel Schmitz",
      "email": "danieljfa@gmail.com",
      "url": "https://github.com/danielschmitz"
    }
  },
  "basePath": "/api",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "scheme": "bearer",
      "in": "header"
    }
  },
  "paths": {
    "/hello-world": {
      "get": {
        "tags": [
          "Hello World"
        ],
        "summary": "A simple Hello World message",
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/hello-world-with-error": {
      "get": {
        "tags": [
          "Hello World with error"
        ],
        "summary": "A simple Hello World message",
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/hello-world-test-joi": {
      "post": {
        "tags": [
          "Test joi validation "
        ],
        "summary": "Test joi validaton object",
        "description": "",
        "parameters": [
          {
            "name": "test",
            "in": "body",
            "description": "Simple Data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SimpleData"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "SimpleData": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Simple data"
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}